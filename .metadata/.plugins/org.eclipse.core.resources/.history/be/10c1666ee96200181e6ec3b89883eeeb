package travis.halleck;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

import javax.swing.JComboBox;

public class PlaylistFile {
	private JComboBox cb;
	private BufferedReader br;
	private BufferedWriter bw;
	private File file;
	private final String fileName = "music_list.txt";
	
	public PlaylistFile(JComboBox cb) throws IOException {
		this.cb = cb;
		file = new File(fileName);
		
		if(doesFileExist()) {
			readFromFile();
		}else {
			writeToFile();
		}
		
		if(PlayerList.getListSize() > 0) {
			for(int i = 0; i<PlayerList.getListSize(); i++) {
				cb.setSelectedItem(PlayerList.getPlayerListName());
			}
		}
		
		
	}
	
	private boolean doesFileExist() {
		if(file.exists()) {
			return true;
		}
		return false;
	}
	
	private void readFromFile() throws IOException {
		String line = "";
		if(doesFileExist()) {
			try {
				br = new BufferedReader(new FileReader(file));
				while((line = br.readLine()) != null) {
					if(!line.isEmpty()) {
						cb.addItem(line);
					}
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
			br.close();
		}
	}
	
	private void writeToFile() throws IOException  {
		try {
			bw = new BufferedWriter(new FileWriter(file));
			for(int i = 0; i<PlayerList.getListSize(); i++) {
				bw.write(PlayerList.getFullPathByIndex(i));
			}
		} catch (IOException e) {
			e.printStackTrace();
			e.getMessage();
		}
		bw.close();
	}
	
}
